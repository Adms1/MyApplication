<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel Swim Compition"
        android:textColor="@color/white"
        android:background="@color/pink"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="20sp"
        android:textStyle="bold"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not interested:"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="20dp"            
            android:gravity="center_vertical"
            android:textColor="@color/texts1"
            android:textSize="18sp"
            android:textStyle="bold" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp"
	    android:orientation="horizontal" >

	    <Button
	        android:id="@+id/btn_csc_1"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:background="@color/text_blue"
	        android:paddingBottom="5dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:paddingTop="5dp"
	        android:text="NA : Out of town"
	        android:textColor="@color/white"
	        android:textSize="15sp"
	        android:textStyle="bold" />

	    <Button
	        android:id="@+id/btn_csc_2"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="5dp"
	        android:background="@color/text_blue"
	        android:paddingBottom="5dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:paddingTop="5dp"
	        android:text="NA : Another\nevent planned"
	        android:textColor="@color/white"
	        android:textSize="15sp"
	        android:textStyle="bold" />

	    <Button
	        android:id="@+id/btn_csc_3"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="5dp"
	        android:background="@color/text_blue"
	        android:paddingBottom="5dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:paddingTop="5dp"
	        android:text="Parent feels\nchild is not ready"
	        android:textColor="@color/white"
	        android:textSize="15sp"
	        android:textStyle="bold" />

	    <Button
	        android:id="@+id/btn_csc_4"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="5dp"
	        android:background="@color/text_blue"
	        android:paddingBottom="5dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:paddingTop="5dp"
	        android:text="Parent is\nthinking about it"
	        android:textColor="@color/white"
	        android:textSize="15sp"
	        android:textStyle="bold" />

	    <Button
	        android:id="@+id/btn_csc_5"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="5dp"
	        android:background="@color/text_blue"
	        android:paddingBottom="5dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:paddingTop="5dp"
	        android:text="Parent said yes"
	        android:textColor="@color/white"
	        android:textSize="15sp"
	        android:textStyle="bold" />

	    <Button
	        android:id="@+id/btn_csc_6"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="5dp"
	        android:background="@color/text_blue"
	        android:paddingBottom="5dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:paddingTop="5dp"
	        android:text="Forgot to\nmention to parent"
	        android:textColor="@color/white"
	        android:textSize="15sp"
	        android:textStyle="bold" />

	    <Button
	        android:id="@+id/btn_csc_7"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="5dp"
	        android:layout_weight="1"
	        android:background="@color/text_blue"
	        android:paddingBottom="5dp"
	        android:paddingLeft="30dp"
	        android:paddingRight="30dp"
	        android:paddingTop="5dp"
	        android:text="Other"
	        android:textColor="@color/white"
	        android:textSize="15sp"
	        android:textStyle="bold" />
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:orientation="vertical">
	<EditText 
	    android:id="@+id/et_csc_reason"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingLeft="10dp"
	    android:textColor="@color/texts1"
	    android:singleLine="true"
	    android:maxLines="1"
	    android:layout_gravity="center_horizontal"
	    android:hint="Other reason:"
	    android:background="@drawable/textarea_normal" />
	
	<Button 
	    android:id="@+id/btn_csc_add_other"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:padding="10dp"
	    android:textSize="15dp"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="10dp"
	    android:textStyle="bold"
	    android:textColor="@color/white"
	    android:background="@color/text_blue"
	    android:text="Submit Other"/>
	
	</LinearLayout>
</LinearLayout>
