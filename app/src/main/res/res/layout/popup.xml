<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
     >
<ImageView 
    android:id="@+id/iv_popupback"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup"/>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignLeft="@+id/iv_popupback"
    android:layout_alignRight="@+id/iv_popupback"
    android:layout_alignTop="@+id/iv_popupback"
    android:layout_alignBottom="@+id/iv_popupback"
    android:orientation="vertical">
    <Button
        android:id="@+id/popupeditfolder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:text="Edit"
        android:textColor="@color/texts1" />

    <Button
        android:id="@+id/popupnewfolder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:text="New folder"
        android:paddingTop="3dp"
        android:paddingLeft="46dp"
        android:textColor="@color/texts1" />
    
    <Button
        android:id="@+id/popupdeletefolder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:text="Delete"
        android:paddingTop="3dp"
        android:paddingLeft="12dp"
        android:textColor="@color/texts1" />
</LinearLayout>
</RelativeLayout>