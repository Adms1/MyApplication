<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toplayout_date_time" />

    <TextView
        android:id="@+id/tv_det_rep_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CDCDFA"
        android:paddingLeft="10dp"
        android:text="REPORTS!!"
        android:textColor="#1E1E8E"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/success_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#48A41C"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:text="Work Request Submitted Successfully"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Work Request:"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/date_view"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:text="MM/dd/YYYY" />

                        <Button
                            android:id="@+id/date_button"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/calendar_time" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Start Time"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <Spinner
                                    android:id="@+id/hour_1"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:entries="@array/hour" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text=":"
                                    android:textSize="16sp" />

                                <Spinner
                                    android:id="@+id/min_1"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:entries="@array/min" />

                                <Spinner
                                    android:id="@+id/am_pm_1"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:entries="@array/am_pm" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <Spinner
                                    android:id="@+id/hour_2"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:entries="@array/hour" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text=":"
                                    android:textSize="16sp" />

                                <Spinner
                                    android:id="@+id/min_2"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:entries="@array/min" />

                                <Spinner
                                    android:id="@+id/am_pm_2"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:entries="@array/am_pm" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="End Time"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <Spinner
                                    android:id="@+id/hour_1_end"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:entries="@array/hour" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text=":"
                                    android:textSize="16sp" />

                                <Spinner
                                    android:id="@+id/min_1_end"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:entries="@array/min" />

                                <Spinner
                                    android:id="@+id/am_pm_1_end"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:entries="@array/am_pm" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <Spinner
                                    android:id="@+id/hour_2_end"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:entries="@array/hour" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text=":"
                                    android:textSize="16sp" />

                                <Spinner
                                    android:id="@+id/min_2_end"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:entries="@array/min" />

                                <Spinner
                                    android:id="@+id/am_pm_2_end"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:entries="@array/am_pm" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reason / Work completed:"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/reason"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:hint="Reason / Work completed:"
                        android:lines="5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/site"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Site : "
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/sp_site"
                            android:layout_width="200dp"
                            android:layout_height="40dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/site1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Manager : "
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/sp_manager"
                            android:layout_width="200dp"
                            android:layout_height="40dp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/save"
                    android:layout_width="150dp"
                    android:background="@drawable/button_orange_selector"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Save" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>